{
  "name": "gomoku",
  "version": "1.0.0",
  "description": "A Gomoku AI project using Electron and WebAssembly",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-static": "copyfiles -u 2 src/renderer/*.{html,css,wasm,js} dist/renderer"
  },
  "build": {
    "appId": "com.student.gomoku",
    "productName": "Gomoku",
    "files": [
      "dist/",
      "package.json"
    ],
    "linux": {
      "target": "dir",
      "artifactName": "${productName}"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ai-digest": "^1.5.1"
  }
}
