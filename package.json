{
  "name": "gomoku",
  "version": "1.0.0",
  "description": "A Gomoku AI project using Electron and WebAssembly",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "lint": "eslint src/ --ext .ts,.tsx",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:renderer": "esbuild src/renderer/game_controller.ts --bundle --outfile=dist/renderer/game_controller.js --format=esm --sourcemap --platform=browser",
    "copy-static": "copyfiles -u 2 src/renderer/*.{html,css,wasm,js,json,png} src/renderer/sounds/*.mp3 dist/renderer && npm run copy-worker",
    "copy-worker": "copyfiles -u 2 dist/wasm/ai_worker.js dist/renderer"
  },
  "build": {
    "appId": "com.student.gomoku",
    "productName": "Gomoku",
    "files": [
      "dist/",
      "package.json"
    ],
    "linux": {
      "target": "dir",
      "artifactName": "${productName}",
      "executableName": "Gomoku"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ai-digest": "^1.5.1",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "@types/three": "^0.160.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0"
  }
}
